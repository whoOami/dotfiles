##### song format #####
##
## for song format you can use:
##
## %l - length
## %f - filename
## %D - directory
## %a - artist
## %A - album artist
## %t - title
## %b - album
## %y - year
## %n - track number (01/12 -> 01)
## %N - full track info (01/12 -> 01/12)
## %g - genre
## %c - composer
## %p - performer
## %d - disc
## %C - comment
## $R - begin right alignment
##
## - b - bold text
## - u - underline text
## - r - reverse colors
## - a - use alternative character set
##
## - 0 - default window color (discards all other colors)
## - 1 - black
## - 2 - red
## - 3 - green
## - 4 - yellow
## - 5 - blue
## - 6 - magenta
## - 7 - cyan
## - 8 - white
## - 9 - end of current color
song_list_format = "$8{%a} - {%t}"
song_status_format = "{$8%a} $2»$8»$3» $b{$8%t}$/b"
song_library_format = "{%n - }{%t}|{%f}"
# tag_editor_album_format = "{%a} - {%b}"
browser_sort_mode = "name"
browser_sort_format = "{%a - }{%t}|{%f} {(%l)}"
alternative_header_first_line_format = "{$b$8%t$9$/b}"
alternative_header_second_line_format ="$0{%a}$b$/b"
now_playing_prefix = "$b$u$2 ❱"
now_playing_suffix = "$2$/b$/u$2"
browser_playlist_prefix = "$2playlist$9 "
#selected_item_prefix = "$6"
#selected_item_suffix = "$9"
#modified_item_prefix = "$3> $9"

## - r - column will be right aligned
## - E - if tag is empty, empty tag marker won't be displayed
song_columns_list_format = "(3f)[red]{} (35)[white]{t|f} (30)[red]{a} (30)[white]{b} (5f)[240]{l}"

